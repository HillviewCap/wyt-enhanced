generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  id              String           @id @default(uuid())
  macAddress      String           @unique
  firstSeen       DateTime
  lastSeen        DateTime
  sightings       Sighting[]
  analysisResults AnalysisResult[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Sighting {
  id             String   @id @default(uuid())
  deviceId       String
  device         Device   @relation(fields: [deviceId], references: [id])
  timestamp      DateTime
  latitude       Float
  longitude      Float
  signalStrength Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([deviceId])
  @@index([timestamp])
}

model AnalysisResult {
  id                String   @id @default(uuid())
  deviceId          String
  device            Device   @relation(fields: [deviceId], references: [id])
  persistenceScore  Float
  analysisTimestamp DateTime
  locationCount     Int
  timeWindowHours   Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([deviceId])
  @@index([persistenceScore])
}
